# Backend Application Configuration
APP_PROJECT_NAME="Next Firebase Auth Backend"
APP_VERSION="0.1.0"
APP_ENVIRONMENT="development"
APP_DEBUG=true
APP_ALLOWED_ORIGINS=["http://localhost:3000", "http://frontend:3000"]

# Repository Configuration
APP_REPOSITORY_PROVIDER="memory"  # or "dynamodb"

# AWS / LocalStack Configuration (for DynamoDB)
APP_AWS_ENDPOINT_URL="http://localhost:4566"
APP_AWS_REGION="us-east-1" 
APP_AWS_ACCESS_KEY_ID="test"
APP_AWS_SECRET_ACCESS_KEY="test"

# DynamoDB Tables
APP_DYNAMODB_TABLE_POSTS="dev_posts"
APP_DYNAMODB_TABLE_COMMENTS="dev_comments"

# Firebase Authentication Configuration
APP_FIREBASE_PROJECT_ID="your-firebase-project-id"

# Firebase Admin SDK Credentials (Production only - use Service Account JSON)
# APP_FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com"
# APP_FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
# APP_FIREBASE_PRIVATE_KEY_ID="your-private-key-id"
# APP_FIREBASE_CLIENT_ID="123456789"
# APP_FIREBASE_AUTH_URI="https://accounts.google.com/o/oauth2/auth"
# APP_FIREBASE_TOKEN_URI="https://oauth2.googleapis.com/token"
# APP_FIREBASE_AUTH_PROVIDER_X509_CERT_URL="https://www.googleapis.com/oauth2/v1/certs"
# APP_FIREBASE_CLIENT_X509_CERT_URL="https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxx%40your-project.iam.gserviceaccount.com"

# Firebase Auth Emulator (Development only)
# Set this to enable Firebase Auth emulator for local development
APP_FIREBASE_AUTH_EMULATOR_HOST="127.0.0.1:9099"

# Security Notes:
# 1. In development, use Firebase Auth emulator by setting FIREBASE_AUTH_EMULATOR_HOST
# 2. In production, provide real Firebase service account credentials
# 3. Never commit real credentials to version control
# 4. Use proper environment variable management in production (e.g., AWS Secrets Manager, etc.)